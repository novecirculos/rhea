{
  "name": "@novecirculos/niv-meteor",
  "private": true,
  "scripts": {
    "start": "MONGO_URL=mongodb://localhost:27017/niv meteor --settings private/env/dev/settings.json --exclude-archs web.browser.legacy,web.cordova --port 4500",
    "quave-eslint": "eslint . --fix",
    "quave-prettier": "prettier --write \"**/*.js\"",
    "quave-check": "npm run quave-eslint && npm run quave-prettier"
  },
  "dependencies": {
    "@babel/runtime": "^7.24.4",
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.3",
    "@remix-run/router": "^1.16.1",
    "meteor-node-stubs": "^1.2.9",
    "postcss": "^8.4.38",
    "postcss-load-config": "^5.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.13",
    "react-router": "^6.23.1",
    "react-router-dom": "^6.22.3",
    "scheduler": "^0.23.2",
    "simpl-schema": "^3.4.6"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.js",
      "server": "server/main.js"
    }
  },
  "devDependencies": {
    "@quave/eslint-config-quave": "^1.0.7",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "acorn": "^8.12.0",
    "ajv": "^8.16.0",
    "autoprefixer": "^10.4.19",
    "babel-eslint": "^10.1.0",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "tailwindcss": "^3.4.6",
    "tailwindcss-animate": "^1.0.7"
  },
  "eslintConfig": {
    "extends": [
      "@quave/quave"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "meteor npm test && lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
