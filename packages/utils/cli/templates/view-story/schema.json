{
    "$schema": "http://json-schema.org/schema",
    "id": "feature-generator",
    "type": "object",
    "path": "./packages/libs/novecirculos-generator/templates/view-story/template",
    "outputPath": "./apps/storybook/stories/PARENT/NAME",
    "install": [
      {
        "dependencies": {
          "@novecirculos/NAME-view": "*"
        },
        "targets": ["./apps/storybook/package.json"]
      }
    ],
    "properties": {
      "name": {
        "type": "string",
        "description": "Feature name"
      },
      "parent": {
        "type": "string",
        "description": "Parent folder eg: StockAnalysis",
        "default": "Common"
      }
    },
    "required": ["name", "parent"],
    "dependsOn": ["view"]
}