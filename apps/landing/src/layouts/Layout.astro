--- 
import Header from '../components/Header.astro';
import { ViewTransitions } from 'astro:transitions';
import '../styles/globals.css'
import { SEO } from "astro-seo";

interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="pt-BR">
	<head>
		<meta charset="UTF-8" />
		<SEO
		title="Nove Círculos - Universo de RPG"
		description="Nove Círculos é um universo de RPG, uma experiência imersiva que traz magia, guerras e mistérios em formato de Podcast. É um mundo em que Mestre, Jogadores e Ouvintes se unem para criar histórias memoráveis"
		openGraph={{
				basic: {
						title: "Nove Círculos - Universo de RPG",
						url: 'https://novecirculos.com.br/',
						type: "Nove Círculos é um universo de RPG, uma experiência imersiva que traz magia, guerras e mistérios em formato de Podcast. É um mundo em que Mestre, Jogadores e Ouvintes se unem para criar histórias memoráveis",
						image: "https://media.graphassets.com/W2LHS096TICNGU4Eys1V",
				},
				image: {
						url: "https://media.graphassets.com/W2LHS096TICNGU4Eys1V",
						alt: "Nove Círculos - Universo de RPG",
				}
		}}
		twitter={{
			card: 'summary_large_image',
			site: '@novecirculos',
			creator: "@araujoo_js"
		}}
		extend={{
				// extending the default link tags
				link: [{ rel: "icon", href: "/favicon.svg" }],
				// extending the default meta tags
				meta: [
						{
								name: "twitter:image",
								content: "https://media.graphassets.com/W2LHS096TICNGU4Eys1V",
						},
						{ name: "twitter:title", content: "Nove Círculos - Universo de RPG" },
						{ name: "twitter:description", content: "Nove Círculos é um universo de RPG, uma experiência imersiva que traz magia, guerras e mistérios em formato de Podcast. É um mundo em que Mestre, Jogadores e Ouvintes se unem para criar histórias memoráveis" },
				],
		}}
/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com"/>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
  <link href="https://fonts.googleapis.com/css2?family=Alice&family=Noto+Serif:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet"/>	
		<meta name="generator" content={Astro.generator} />
		<ViewTransitions />
		<title>{title}</title>
	</head>
	<body class="dark">
		<Header />
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: Noto Serif, serif;
		background: hsl(211, 36%, 12%);
	}
</style>
